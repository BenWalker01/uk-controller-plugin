{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang-base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "inherits": "clang-base",
            "binaryDir": "${sourceDir}/build-clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release",
            "inherits": "clang-base",
            "binaryDir": "${sourceDir}/build-clang-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "name": "msvc-debug",
            "displayName": "MSVC Debug",
            "inherits": "msvc-base",
            "binaryDir": "${sourceDir}/build-msvc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "msvc-release",
            "displayName": "MSVC Release",
            "inherits": "msvc-base",
            "binaryDir": "${sourceDir}/build-msvc-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "clang-debug",
            "displayName": "Clang Debug Build",
            "configurePreset": "clang-debug",
            "configuration": "Debug"
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release Build",
            "configurePreset": "clang-release",
            "configuration": "Release"
        },
        {
            "name": "msvc-debug",
            "displayName": "MSVC Debug Build",
            "configurePreset": "msvc-debug",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "displayName": "MSVC Release Build",
            "configurePreset": "msvc-release",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "clang-debug-tests",
            "displayName": "Clang Debug Tests",
            "configurePreset": "clang-debug",
            "configuration": "Debug"
        },
        {
            "name": "clang-release-tests",
            "displayName": "Clang Release Tests",
            "configurePreset": "clang-release",
            "configuration": "Release"
        }
    ]
}